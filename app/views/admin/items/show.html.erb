<div class="box-header"><h1>Просмотр товара</h1></div>
<% if notice %><p class="warning"><%= notice %></p><% end %>
<table>
  <tbody>
    <tr>
      <td><strong>Категория</strong></td>
      <td><%= category(@item.category_id) %></td>
    </tr>
    <tr>
      <td><strong>Цена</strong></td>
      <td><%= @item.price %></td>
    </tr>
    <tr>
      <td><strong>Картинка 1</strong></td>
      <td><%= image_tag @item.picture1.url(:small) unless @item.picture1.url.include? "missing.png" %></td>
    </tr>
    <tr>
      <td><strong>Картинка 2</strong></td>
      <td><%= image_tag @item.picture2.url(:small) unless @item.picture2.url.include? "missing.png" %></td>
    </tr>
    <tr>
      <td><strong>Картинка 3</strong></td>
      <td><%= image_tag @item.picture3.url(:small) unless @item.picture3.url.include? "missing.png" %></td>
    </tr>
    <tr>
      <td><strong>Описание</strong></td>
      <td><%= @item.desc %></td>
    </tr>
    <tr>
      <td><strong>Есть в наличии</strong></td>
      <td><%= image_tag "plus.png" if @item.availability %></td>
    </tr>
    <tr>
      <td><strong>Показать на главной</strong></td>
      <td><%= image_tag "plus.png" if @item.showonmain %></td>
    </tr>
  </tbody>
</table>

<div class="action_bar">
  <%= link_to 'Редактировать', edit_item_path(@item), class: "button" %>
  <%= link_to 'Назад', items_path %>
</div>

