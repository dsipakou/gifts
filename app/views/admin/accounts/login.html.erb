<%= form_tag do %>
<table>
	<tr>
		<td><%= text_field_tag 'username', nil, placeholder: "Имя пользователя" %></td>
	</tr>
	<tr>
		<td><%= text_field_tag 'password', nil, placeholder: "Пароль" %></td>
	</tr>
	<tr>
		<td><%= submit_tag "Вход", name: "submit", class: "button blue" %>
		<%= link_to 'Регистрация', signup_path %></td>
	</tr>
</table>
<% end %>