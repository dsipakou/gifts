<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	<p><%= f.text_field :username, placeholder: "Имя пользователя", autofocus: true %></p>

	<p><%= f.text_field :email, placeholder: "E-mail" %></p>

	<p><%= f.password_field :password, placeholder: "Пароль" %></p>

	<p><%= f.password_field :password_confirmation, placeholder: "Повтор пароля" %></p>

	<p><%= f.submit "Регистрация", class: "button blue" %></p>
<% end %>

<%= render "devise/shared/links" %>
