<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<p><%= f.text_field :username, autofocus: true, placeholder: "Имя пользователя"  %></p>
	<p><%= f.password_field :password, placeholder: "Пароль" %></p>
	<p><%= f.submit "Войти", class: "button blue" %>

	<% if devise_mapping.rememberable? -%>
		<%= f.check_box :remember_me %> <%= f.label :remember_me, "Запомнить?" %></p>
	<% end -%>
<% end %>

<%= render "devise/shared/links" %>
